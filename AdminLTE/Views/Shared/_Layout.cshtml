@{
    var menus = MvcBase.Unity.Get<AdminLTE.Domain.Services.IMenuService>().ListCache();
    var loginInfo = AdminLTE.Helper.LoginInfoHelper.Current();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Html.RenderStyles(StyleFiles.Bootstrap, StyleFiles.FontAwesome, StyleFiles.Ionicons, StyleFiles.JqueryJvectormap, StyleFiles.AdminLTE,StyleFiles.AllSkins,StyleFiles.Style)
    @RenderSection("styles", false)

    <!--[if lt IE 9]>
    @Html.RenderScripts(ScriptFiles.Html5shiv,ScriptFiles.Respond)
